@{
    ViewBag.Title = "编辑商品";
    var F = @Html.F();
}

@model lxsShop.ViewModel.goodsViewModel



@section body {



    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).AutoScroll(true).IsViewPort(true).Layout(LayoutType.VBox)
        .Toolbars(
            F.Toolbar().ID("Toolbar1")
                .Items(
                    F.Button().ID("btnClose").Icon(Icon.SystemClose).Text("关闭").Listener("click", "F.activeWindow.hide();"),
                    F.ToolbarSeparator(),
                    F.Button().ID("btnSaveClose").ValidateForms("SimpleForm1").Icon(Icon.SystemSaveClose).OnClick(Url.Action("Edit_btnSaveClose_Click"), "SimpleForm1", new Parameter("text", "F.ui.HtmlEditor1.getValue()")).Text("保存后关闭")
                )
        )
        .Items(
            F.SimpleForm().ID("SimpleForm1").ShowBorder(false).ShowHeader(false).BodyPadding(10)
                .Items(
                    F.SimpleForm().LabelWidth(130).ID("SimpleForm1").ShowBorder(false).ShowHeader(false).BodyPadding(10)
                        .Items(
                            F.HiddenFieldFor(m => m.goodsId),
                            F.HiddenFieldFor(m => m.goodsImg),
                            F.TextBoxFor(m => m.goodsSn).MaxLength(50).Enabled(false),
                            F.TextBoxFor(m => m.goodsName).MaxLength(50),
                            F.CheckBoxFor(m=>m.isNew),
                            // F.CheckBoxFor(m=>m.isRecom),
                            F.NumberBoxFor(m=>m.ordering),
                            F.TextBoxFor(m => m.goodsSeoKeywords).MaxLength(50),
                            F.FileUpload().ID("filePhoto").EmptyText("可选择一张新商品图（350*350）").Label("商品图片"),
                            F.DropDownListFor(m => m.goodsCatId).EnableSimulateTree(true).DataTextField("catName").DataValueField("catId").DataSimulateTreeLevelField("TreeLevel").Required(true).ShowRedStar(true).DataSource(ViewBag.goods_catsDataSource),

                            F.DropDownListFor(m => m.brandId).DataSource(ViewBag.brands_DataSource).DataTextField("brandName").DataValueField("brandId"),
                            F.HtmlEditor().Label("商品介绍").ID("HtmlEditor1").Editor(Editor.UMEditor).Text(ViewBag.goodsDesc)
                                .BasePath(Url.Content("~/res/third-party/umeditor/")).ToolbarSet(EditorToolbarSet.Full).Height(300)
                        )

                )
        )
        )

}
