@{
    ViewBag.Title = "修改密码";
    var F = Html.F();
}
@model Entitys.AdminUsers

@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).LabelWidth(200).ShowBorder(true).ShowHeader(false).Title("修改密码")
        .Items(
            F.HiddenFieldFor(m => m.ID),
            F.HiddenFieldFor(m => m.loginName),
            F.TextBox().ID("TextBoxOld").TextMode(TextMode.Password).Required(true).Label("旧密码").Text(""),
            F.TextBox().ID("TextBoxNew1").MinLength(6).MaxLength(20).TextMode(TextMode.Password).Required(true).Label("新密码").Text(""),
            F.TextBox().ID("TextBoxNew2").MinLength(6).MaxLength(20).TextMode(TextMode.Password).Required(true).Label("确认新密码").CompareControl("TextBoxNew1").CompareOperator(Operator.Equal).CompareMessage("两次新密码应该一致"),

          
            F.Button().ID("btnSubmit").ValidateForms("SimpleForm1").CssClass("marginr").Text("提交").OnClick(Url.Action("btnPassSubmit_Click"), "SimpleForm1"),
            F.Button().ID("btnReset").Text("重置").OnClientClick("F.ui.SimpleForm1.reset();")
        )
        )


}